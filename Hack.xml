						<Offset>
							<AbsDimension x='52' y='-13'/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick> PanelTemplates_SetTab(HackListFrame,1) Hack.SetMode('page') </OnClick>
				</Scripts>
			</Button>
			<Button name='$parentTab2' inherits='CharacterFrameTabButtonTemplate' id='2' text='books'>
				<Anchors>
					<Anchor point='LEFT' relativeTo='$parentTab1' relativePoint='RIGHT'>
						<Offset>
							<AbsDimension x='-16' y='0'/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick> PanelTemplates_SetTab(HackListFrame,2) Hack.SetMode('book') </OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnEvent> Hack[event](self,event,...) </OnEvent>
			<OnLoad>
				Hack.OnLoad(self)
				PanelTemplates_SetNumTabs(HackListFrame, 2)
				PanelTemplates_SetTab(HackListFrame, 1)
			</OnLoad>
			<OnShow> PlaySound(SOUNDKIT.IG_SPELLBOOK_OPEN) </OnShow>
			<OnHide> PlaySound(SOUNDKIT.IG_SPELLBOOK_CLOSE) </OnHide>
		</Scripts>
	</Frame>

	<!--===================================
