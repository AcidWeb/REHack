				</Anchors>
			</CheckButton>
			<CheckButton name='HackSearchName' inherits='T_HackSearchCheck' checked='true'>
				<Anchors>
					<Anchor point='RIGHT' relativePoint='LEFT' relativeTo='HackSearchBody'/>
				</Anchors>
			</CheckButton>
			<EditBox name='HackSearchEdit' inherits='T_HackTooltipEnabled,InputBoxTemplate' letters='200' autoFocus='false' visible='true'>
				<Size>
					<AbsDimension y='10'/>
				</Size>
				<Anchors>
					<Anchor point='TOPRIGHT' relativeTo='HackSearchName' relativePoint='TOPLEFT'>
						<Offset>
							<AbsDimension y='-2'/>
						</Offset>
					</Anchor>
