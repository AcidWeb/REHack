<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
 http://wowprogramming.com/FrameXML/UI.xsd">
	<!--===================================
   Templates
   ====================================-->

	<Button name='T_HackTooltipEnabled' virtual='true'>
		<Scripts>
			<OnEnter> Hack.Tooltip(self) </OnEnter>
			<OnLeave> GameTooltip:Hide() </OnLeave>
		</Scripts>
	</Button>

	<Button name='T_HackButton' inherits='T_HackTooltipEnabled' virtual='true'>
		<Size>
			<AbsDimension x='16' y='16'/>
		</Size>
		<HighlightTexture file="Interface\AddOns\Hack\Media\Buttons" alphaMode="ADD">
			<TexCoords left=".875" right="1" top=".5" bottom=".625"/>
		</HighlightTexture>
		<Scripts>
			<OnClick> Hack.OnButtonClick(self:GetName()) </OnClick>
		</Scripts>
	</Button>

	<CheckButton name='T_HackCheckButton' inherits='OptionsCheckButtonTemplate,T_HackTooltipEnabled' virtual='true'>
		<Size>
			<AbsDimension x='16' y='16'/>
		</Size>
		<HitRectInsets>
			<AbsInset left='0' right='0' top='0' bottom='0'/>
		</HitRectInsets>
	</CheckButton>

	<CheckButton name='T_HackSearchCheck' inherits='T_HackCheckButton,T_HackButton' virtual='true'>
		<Scripts>
			<OnLoad> self:SetAlpha(.7) </OnLoad>
			<OnClick> Hack.UpdateSearchContext() </OnClick>
		</Scripts>
	</CheckButton>

	<Frame name='T_HackResizableFrame' virtual='true' movable='true' resizable='true' enableMouse='true' hidden='false'>
		<Backdrop edgeFile='Interface\Addons\Hack\Media\Border' setAllPoint="true" tile='true'>
			<BackgroundInsets>
				<AbsInset left='3' right='3' top='3' bottom='3'/>
			</BackgroundInsets>
			<TileSize val='128' />
			<EdgeSize val='14' />
		</Backdrop>
		<Layers>
			<Layer level='BACKGROUND'>
				<Texture name='$parentTitle'>
					<!-- title bar -->
					<Size y='22' />
					<Color r='.1490' g='.1569' b='.1686'/>
					<Anchors>
						<Anchor point='TOPLEFT'>
							<Offset>
								<AbsDimension x='3' y='-3'/>
							</Offset>
						</Anchor>
						<Anchor point='RIGHT'>
							<Offset>
								<AbsDimension x='-3'/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
				<!-- Background -->
				<Texture name='$parentBG' file='Interface\Addons\Hack\Media\EditorTile' setAllPoint='true' vertTile='true' horizTile='true'>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="3" y='-3'/>
						</Anchor>
						<Anchor point="BOTTOMRIGHT">
							<Offset x="-3" y="3" />
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<Button name='$parentClose' inherits='UIPanelCloseButton'>
				<Anchors>
					<Anchor point='TOPRIGHT'>
						<Offset>
							<AbsDimension x='2' y='1'/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick> self:GetParent():Hide() </OnClick>
				</Scripts>
			</Button>
			<Button>
				<!-- resize grip -->
				<Size>
					<AbsDimension x='16' y='16'/>
				</Size>
				<Anchors>
					<Anchor point='BOTTOMRIGHT'>
						<Offset>
							<AbsDimension x='4' y='-4'/>
						</Offset>
					</Anchor>
				</Anchors>
				<NormalTexture    file='Interface\AddOns\Hack\Media\Buttons'>
					<TexCoords left='.75' right='1' top='.25' bottom='.5'/>
				</NormalTexture>
				<HighlightTexture file='Interface\AddOns\Hack\Media\Buttons' alphaMode='ADD'>
					<TexCoords left='.75' right='1' top='.25' bottom='.5'/>
				</HighlightTexture>
				<Scripts>
					<OnMouseDown> self:GetParent():StartSizing() </OnMouseDown>
					<OnMouseUp> self:GetParent():StopMovingOrSizing() Hack.Snap() </OnMouseUp>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnMouseDown> self:StartMoving() </OnMouseDown>
			<OnMouseUp>  self:StopMovingOrSizing() Hack.Snap() </OnMouseUp>
		</Scripts>
	</Frame>

	<Button name='T_HackListItem' virtual='true'>
		<Size>
			<AbsDimension y='17'/>
		</Size>
		<Anchors>
			<Anchor point='LEFT'  relativeTo='HackListScrollFrame'/>
			<Anchor point='RIGHT' relativeTo='HackListScrollFrame' relativePoint='RIGHT'/>
		</Anchors>
		<HighlightTexture file='Interface\QuestFrame\UI-QuestTitleHighlight' alphaMode='ADD'/>
		<Layers>
			<Layer level='ARTWORK'>
				<FontString name='$parentName' inherits='GameFontHighlightSmall' justifyH='LEFT'>
					<Size>
						<AbsDimension y='17'/>
					</Size>
					<Anchors>
						<Anchor point='LEFT'>
							<Offset>
								<AbsDimension x='20'/>
							</Offset>
						</Anchor>
						<Anchor point='RIGHT' relativePoint='RIGHT'/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<CheckButton name='$parentAutorun' inherits='T_HackCheckButton,T_HackButton'>
				<Anchors>
					<Anchor point='LEFT'>
						<Offset>
							<AbsDimension x='2'/>
						</Offset>
					</Anchor>
				</Anchors>
				<NormalTexture file='Interface\AddOns\Hack\Media\Buttons'>
					<TexCoords left='0' right='.125' top='0' bottom='.125'/>
				</NormalTexture>
				<PushedTexture file='Interface\AddOns\Hack\Media\Buttons'>
					<TexCoords left='.125' right='.25' top='0' bottom='.125'/>
				</PushedTexture>
				<CheckedTexture file='Interface\AddOns\Hack\Media\Buttons'>
					<TexCoords left='.25' right='.375' top='0' bottom='.125'/>
				</CheckedTexture>
				<Scripts>
					<OnClick> Hack.OnListItemAutorunClicked( self:GetParent():GetID(), self:GetChecked()==true ) </OnClick>
				</Scripts>
			</CheckButton>
			<EditBox name='$parentEdit' letters='100' autoFocus='false' hidden='true'>
				<Anchors>
					<Anchor point='TOPLEFT'     relativeTo='$parentName'/>
					<Anchor point='BOTTOMRIGHT' relativeTo='$parentName' relativePoint='BOTTOMRIGHT' />
				</Anchors>
				<FontString inherits='GameFontHighlightSmall'/>
				<Scripts>
					<OnEditFocusLost>
						self:Hide()
						self:SetText('')
						getglobal(self:GetParent():GetName()..'Name'):Show()
					</OnEditFocusLost>
					<OnEscapePressed>
						self:ClearFocus()
					</OnEscapePressed>
					<OnEnterPressed>
						Hack.FinishRename(self:GetText())
						self:ClearFocus()
					</OnEnterPressed>
				</Scripts>
			</EditBox>
		</Frames>
		<Scripts>
			<OnClick> Hack.OnListItemClicked(self:GetID()) </OnClick>
			<OnDoubleClick> Hack.Rename() </OnDoubleClick>
		</Scripts>
	</Button>

	<!--===================================
   List Frame
   ====================================-->

